<%= form_for @customer, :html => { :class => "form-horizontal customer" } do |f| %>

    <% if @customer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @customer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <div class="control-group row ">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :name, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-md-3"></div>
    <%= error_span(@customer[:name]) %>
  </div>

  <div class="control-group row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <%= f.label :address, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :address, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-md-3"></div>
    <%= error_span(@customer[:address]) %>
  </div>

  <div class="control-group row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <%= f.label :email, :class => 'control-label' %>
        <div class="controls ">
          <%= f.email_field :email, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-md-3"></div>
    <%= error_span(@customer[:email]) %>
  </div>
<br>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            customers_path, :class => 'btn btn-default' %>
  </div>
  <div class="col-md-3"></div>
</div>
<% end %>
