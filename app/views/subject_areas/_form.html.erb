<%= form_for @subject_area, :html => { :class => "form-horizontal subject_area" } do |f| %>

    <% if @subject_area.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@subject_area.errors.count, "error") %> prohibited this subject_area from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @subject_area.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-md-3"></div>
    <%= error_span(@subject_area[:name]) %>
  </div>

  <div class="control-group row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <%= f.label :definition, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :definition, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-md-3"></div>
    <%= error_span(@subject_area[:definition]) %>
  </div>
<br>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                subject_areas_path, :class => 'btn btn-default' %>
  </div>
  <div class="col-md-3"></div>
</div>
<% end %>
