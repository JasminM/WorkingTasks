<%= form_for @employee, :html => { :class => "form-horizontal employee" } do |f| %>

    <% if @employee.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <%= f.label :position, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :position, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-md-3"></div>
    <%= error_span(@employee[:position]) %>
  </div>

  <div class="control-group row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <%= f.label :lastname, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :lastname, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-md-3"></div>
    <%= error_span(@employee[:lastname]) %>
  </div>

  <div class="control-group row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <%= f.label :firstname, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :firstname, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-md-3"></div>
    <%= error_span(@employee[:firstname]) %>
  </div>
<br>
  <div class="control-group row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <% if params[:department_id] != nil %>
          <%= f.collection_select :department_id, Department.all, :id, :name, {selected: params[:department_id]}, {class:"form-control"}  %>
      <% else %>
          <%= f.collection_select :department_id, Department.all, :id, :name, {prompt: 'Select a Department'}, {class: "form-control"} %>
      <% end %>
    </div>
    <div class="col-md-3"></div>
    <%= error_span(@employee[:department_id]) %>
  </div>

    <br>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employees_path, :class => 'btn btn-default' %>
  </div>
  <div class="col-md-3"></div>
</div>
<% end %>
