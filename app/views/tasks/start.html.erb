<%- model_class = Task -%>
<div class="page-header">
  <h1 align="center"><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %> Overview</h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:title) %></th>
    <th><%= model_class.human_attribute_name(:content) %></th>
    <th><%= model_class.human_attribute_name(:priority) %></th>
    <th><%= model_class.human_attribute_name(:status) %></th>
    <th><%= model_class.human_attribute_name(:begin) %></th>
    <th><%= model_class.human_attribute_name(:end) %></th>
    <th><%= model_class.human_attribute_name(:customer_id) %></th>
    <th><%= model_class.human_attribute_name(:subject_area_id) %></th>
    <th><%= model_class.human_attribute_name(:created_at) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% Task.all.each do |task| %>
      <tr>
        <td><%= link_to task.id, task_path(task) %></td>
        <td><%= task.title %></td>
        <td><%= task.priority %></td>
        <td><%= task.subject_area_id %></td>
        <td></td>
        <td>"Bearbeiter folgt"</td>
        <td><%= task.customer_id %></td>
        <td><%= task.content %></td>
        <td><%= task.begin.strftime("%v") %></td>
        <td><%= task.end.strftime("%v") %></td>
        <td><%= task.status %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_task_path,
            :class => 'btn btn-primary' %>
