<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Begin</th>
      <th>End</th>
      <th>Customer</th>
      <th>Subject area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= task.begin %></td>
        <td><%= task.end %></td>
        <td><%= task.customer %></td>
        <td><%= task.subject_area %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

